{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "DOM"],
    "moduleResolution": "node",
    "module": "es2020",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2020",
    "paths": {
      "$components/*": ["src/lib/components/*"],
      "$def/*": ["src/lib/def/*"],
      "$helpers/*": ["src/lib/helpers/*"],
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$api": ["src/lib/api/*"]
    }
  }
}
